<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="@color/Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open/Close your Shutters"
            android:textSize="20dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="@color/Title"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/modern_shutters"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose mode :"
        android:textSize="17dp"
        android:fontFamily="monospace"
        android:textColor="@color/textColor"
        android:layout_marginTop="30dp"
        />

    <!-- Mode options layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="visible">

        <Button
            android:id="@+id/bttShuttersModeAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ButtonBackground"
            android:text="Auto"
            android:textSize="15dp"
            android:textColor="@color/textColor"
            android:fontFamily="monospace"
            />

        <Button
            android:id="@+id/bttShuttersModeManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ButtonBackground"
            android:text="Manual"
            android:textSize="15dp"
            android:textColor="@color/textColor"
            android:fontFamily="monospace"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto: Open them in the morning and close them at night"
        android:textSize="10dp"
        android:fontFamily="monospace"
        android:textColor="@color/textColor"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual: Open/close shutters at your choice"
        android:textSize="10dp"
        android:fontFamily="monospace"
        android:textColor="@color/textColor"
        android:layout_marginTop="10dp"
        />

    <!-- Shutter 1 layout -->
    <LinearLayout
        android:id="@+id/ll_Shutter_Switch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_Shutter_Switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lamp 1 :"
            android:textSize="20dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/textColor"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/btt_Shutter_Switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ButtonBackground"
            android:text="Turn On "
            android:textColor="@color/textColor"
            android:fontFamily="monospace"
            />

        <ImageView
            android:id="@+id/imgShut1_closed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/modern_shutters_closed"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/imgShut1_open"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/modern_shutters_open"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            />


    </LinearLayout>

    <!-- Shutter 2 layout -->
    <LinearLayout
        android:id="@+id/ll_Shutter_Switch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_Shutter_Switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lamp 2 :"
            android:textSize="20dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/textColor"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/btt_Shutter_Switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ButtonBackground"
            android:text="Turn On "
            android:textColor="@color/textColor"
            android:fontFamily="monospace"
            />

        <ImageView
            android:id="@+id/imgShut2_closed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/modern_shutters_closed"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/imgShut2_open"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/modern_shutters_open"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            />

    </LinearLayout>

</LinearLayout>