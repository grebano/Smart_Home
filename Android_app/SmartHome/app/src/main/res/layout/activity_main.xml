<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:background="#2E2C2C">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Home"
        android:textSize="25dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/bttLights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1BBAB2B2"
        android:text="Manage Lights"
        android:textColor="#FFF3CF"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bttShutters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1BBAB2B2"
        android:text="Manage Shutters"
        android:textColor="#FFF3CF"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"/>




</LinearLayout>